<Window x:Class="Mija_Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mija_Reader"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl x:Name="c_MainTabTC">
            <TabItem Header="{Binding SelectedLanguage.Login}">
                <WebBrowser x:Name="loginBrowser"></WebBrowser>
            </TabItem>
            <TabItem Header="{Binding SelectedLanguage.Home}">
                <StackPanel Orientation="Horizontal">
                    <GroupBox Header="{Binding SelectedLanguage.LastRead}" MinWidth="100">
                        <ListView></ListView>
                    </GroupBox>
                    <GroupBox Header="{Binding SelectedLanguage.NewChapters}" MinWidth="100">
                        <ListView></ListView>
                    </GroupBox>
                    <GroupBox Header="{Binding SelectedLanguage.Search}" MinWidth="200">
                        <StackPanel>
                            <ComboBox MaxHeight="20"></ComboBox>
                            <TextBox MaxHeight="25"></TextBox>
                            <ListView></ListView>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="{Binding SelectedLanguage.Library}">
                <TabControl>
                    <TabItem Header="{Binding SelectedLanguage.Reading}"></TabItem>
                    <TabItem Header="{Binding SelectedLanguage.Finished}"></TabItem>
                    <TabItem Header="{Binding SelectedLanguage.Abandoned}"></TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="{Binding SelectedLanguage.Chapters}"></TabItem>
            <TabItem Header="{Binding SelectedLanguage.Reader}"></TabItem>
            <TabItem Header="{Binding SelectedLanguage.Settings}">
                <GroupBox Header="{Binding SelectedLanguage.LanguageString}" MaxHeight="45" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ComboBox x:Name="c_LanguageCB" ItemsSource="{Binding Languages}"  SelectionChanged="c_LanguageCB_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LanguageName}"></TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </GroupBox>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
