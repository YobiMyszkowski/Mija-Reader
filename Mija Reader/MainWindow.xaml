<Window x:Class="Mija_Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mija_Reader"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="LogIn">
                <WebBrowser x:Name="loginBrowser"></WebBrowser>
            </TabItem>
            <TabItem Header="Home"></TabItem>
            <TabItem Header="Library">
                <TabControl>
                    <TabItem Header="{Binding SelectedLanguage.Reading}"></TabItem>
                    <TabItem Header="{Binding SelectedLanguage.Finished}"></TabItem>
                    <TabItem Header="{Binding SelectedLanguage.Abbandoned}"></TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Chapters"></TabItem>
            <TabItem Header="Reader"></TabItem>
            <TabItem Header="Settings">
                <GroupBox Header="Language" MaxHeight="45" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ComboBox x:Name="c_LanguageCB" ItemsSource="{Binding Languages}"  SelectionChanged="c_LanguageCB_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LanguageName}"></TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </GroupBox>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
